 #!/bin/sh

# Determine the type of system
if [[ "$(uname)" == "Linux" ]]; then
    system_type="Linux_$(uname -r)"
elif [[ "$(uname)" == "Darwin" ]]; then
    system_type="Darwin_$(uname -r)"
elif [[ "$(uname)" == "CYGWIN"* ]]; then
    system_type="Cygwin_$(uname -r)"
else
    system_type="Unix"
fi


# Get the hostname
hostname=$(hostname -s)

# Output the results
echo "${system_type}_$1_${hostname}"

